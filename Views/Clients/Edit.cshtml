@model Cadastro.Domain.Entities.Client
@{
    ViewData["Title"] = "Editar Cliente";
}

<div class="text-center">

    <h1 class="display-4">Editar Cliente</h1>

</div>

<form asp-controller="Clients" asp-action="EditClient" method="post">
    <div class="d-none">
        <label for="id">Id</label>
        <input type="text" asp-for="Id" class="form-control" placeholder="Digite o número do seu Id">
    </div>
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Digite o primeiro nome do Cliente">
    </div>
    <div class="form-group">
        <label for="sobrenome">Sobrenome</label>
        <input type="text" asp-for="LastName" class="form-control" placeholder="Digite o sobrenome do Cliente">
    </div>
    <div class="form-group">
        <label for="email">E-mail</label>
        <input type="email" asp-for="Email" class="form-control" placeholder="Digite o e-mail do Cliente">
    </div>

    <div class="form-group">
        <label for="active">Ativo</label>
        <input type="checkbox" asp-for="Active" class="form-control" placeholder="Marque a checkbox com ativo ou inativo">
    </div>

    <button type="submit" class="btn btn-primary btn-block" asp-controller="Clients" asp-action="EditClient">Alterar</button>
    <a class="btn btn-secondary btn-block" asp-controller="Clients" asp-action="Index" role="button">Voltar</a>
</form>
