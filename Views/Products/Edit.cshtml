@model Cadastro.Domain.Entities.Product
@{
    ViewData["Title"] = "Editar Produto";
}

<div class="text-center">

    <h1 class="display-4">Editar Produto</h1>

</div>

<form asp-controller="Products" asp-action="EditProduct" method="post">
    <div class="d-none">
        <label for="id">Id</label>
        <input type="text" asp-for="Id" class="form-control" placeholder="Digite o número do seu Id">
    </div>
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Digite o nome do Produto">
    </div>
    <div class="form-group">
        <label for="value">Valor</label>
        <input type="text" asp-for="Value" class="form-control" placeholder="Insira o valor do Produto">
    </div>
    <div class="form-group">
        <label for="active">Ativo</label>
        <input type="checkbox" asp-for="Active" class="form-control" placeholder="Marque a checkbox com ativo ou inativo">
    </div>

    <button type="submit" class="btn btn-primary btn-block" asp-controller="Products" asp-action="EditProduct">Alterar</button>
    <a class="btn btn-secondary btn-block" asp-controller="Products" asp-action="Index" role="button">Voltar</a>
</form>
